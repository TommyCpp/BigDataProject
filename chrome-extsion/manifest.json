{
  "manifest_version": 2,
  "name": "User Behavior Recorder",
  "version": "1.0",
  "description": "Record user behavior so that we can recommend based on that",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "https://www.gwu.edu/"
  ],
  "web_accessible_resources": [
    "frame.html"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://stackoverflow.com/*"
      ],
      "js": [
        "sender.js",
        "getSelection.js"
      ],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html"
  }
}